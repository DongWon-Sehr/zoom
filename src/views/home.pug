doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title Noom
		link(rel="stylesheet", href="https://unpkg.com/mvp.css")
	body
		header 
			h1 Noom
		main
			div#welcome
				form
					input#roomTitle(type="text", placeholder="room name", required)
					input#userId(type="text", placeholder="choose a nickname", required)
					button Enter Room
				h4 Room List:
				ul
			div#room
				h3
				div#myStream
					video#myFace(autoplay, playsinline, width="400", height="400")
					button#mute Mute
					button#camera Turn Camera Off
					p Video Source : 
						select#videoSelect
					p Audio Source :
						select#audioSelect 
					video#peersFace(autoplay, playsinline, width="400", height="400")
				div#chat
					ul
					form#message
						input(type="text", placeholder="message", required)
						button(height="10") Send
		script(src="/socket.io/socket.io.js")
		script(src="/public/js/app.js")